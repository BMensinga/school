<html lang="nl">
<head>
    <meta charset="UTF-8" />
    <title><%= pageTitle %></title>
    <link href="css/index.css" type="text/css" rel="stylesheet" />
    <link
            href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&display=swap"
            rel="stylesheet"
    />
</head>
<body>
<header>
    <nav>
        <div class="logo--wrapper">
            <a href="/"
            ><img class="logo--image" src="images/logo.png"
                /></a>
        </div>
        <ul>
            <li>
                <a href="medewerkers"><p>Medewerkers</p></a>
            </li>
            <li>
                <a href="#"><p>Fietsen</p></a>
            </li>
            <li>
                <a href="#"><p>Klanten</p></a>
            </li>
            <li>
                <a href="accessoires"><p>Accessoires</p></a>
            </li>
        </ul>
    </nav>
</header>
<main>
    <h3 class="caption"><p>Accessoires Objecten</p></h3>
    <div>
        <% if(data.length) { %>
            <table class="content-table">
                <thead>
                <tr>
                    <th scope="col"><p>Nummer</p></th>
                    <th scope="col"><p>Voorwerp</p></th>
                    <th scope="col"><p>Dagprijs</p></th>
                    <th scope="col"><p>Nieuwprijs</p></th>
                </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i<data.length; i++) { %>
                    <tr>
                        <th scope="row"><p><%= (i+1) %></p></th>
                        <td><p><%= data[i].item%></p></td>
                        <td><p><%= data[i].dagprijs%></p></td>
                        <td><p><%= data[i].nieuwprijs%></p></td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        <% } %>

        <% if(!data.length) { %>
            <p class="text-center"> Geen accessoires gevonden!</p>~
        <% } %>
    </div>
</main>

<footer class="container--text-margin">
    <p>Copyright &copy; 2020 - DBT Software</p>
    <p class="footer--small-note">
        Crafted with <span class="footer--heart">&#10084;</span> by Bas
    </p>
</footer>
</body>
</html>
